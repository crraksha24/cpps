#include<stdio.h>
int input(int* a,int* b,int* c)
{
 printf("enter the first number\n");
 scanf("%d",a);
 printf("enter the second number\n");
 scanf("%d",b);
 printf("enter the third number\n");
 scanf("%d",c);
}
int compare(int x,int y,int z)
{
 if (x<y)
 {
 return x;
 } 
 else 
 {
return y;
 }
if (x<z)
 {
 return x;
 }
else 
 {
return z;
 }
if (y<z)
 { 
return y;
 }
else 
 {
return z;
 }
}
void output(int m)
{
printf("the smaller number is %d\n",m);
}
int main()
{
int w,x,y,z;
input(&w,&x,&y);
z=compare(w,x,y);
output(z);
}

 
